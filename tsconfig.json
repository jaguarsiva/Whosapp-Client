{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"noImplicitAny": false,
		"noImplicitThis": false,
		"allowJs": true,
		"noEmit": true,
        "baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [ "src/**/*.ts", "src/**/*.vue" ],
	"exclude": [ "node_modules", "src/types/**.ts" ]
}
